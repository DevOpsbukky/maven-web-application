node{
  stage('CodeCheckout'){
    sh "echo running ebay nodeJS project" 
    git 'https://github.com/DevOpsbukky/nodejs-application'
  }
  stage('UnitTest'){
    //sh "npm test"
  }
  stage('Build'){
    sh "echo creating build artifacts"
    nodejs(nodeJSInstallationName: 'Nodejs16') {
        sh 'npm install'
    }
  }
  stage('Quality'){
    sh "echo CodeQualityReport"
    nodejs(nodeJSInstallationName: 'Nodejs16') {
        sh 'npm run sonar'
    }
  }
  stage('UploadArtifacts'){
    sh "echo npm packages uploaded"
    nodejs(nodeJSInstallationName: 'Nodejs16') {
        //sh 'npm publish'
        // Jenkins nexus intergration 
        // password = admin1234  username = admin 
        // echo -n 'admin:admin1234' | openssl base64
    }
  }
  stage('deployment'){
    sh "echo Deploying applications"
    nodejs(nodeJSInstallationName: 'Nodejs16') {
        sh 'npm start'
    }
  }
}
